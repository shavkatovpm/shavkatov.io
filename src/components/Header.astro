---
const pathname = Astro.url.pathname;
---

<header>
  <nav class="container">
    <a href="/" class="logo">shavkatov.io</a>
    <div class="nav-socials">
      <a href="https://t.me/shavkatovio" target="_blank" rel="noopener noreferrer" aria-label="Telegram">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21.2 4.4L2.4 10.9c-.6.2-.6.7 0 .9l4.8 1.5 1.8 5.8c.2.5.7.5.9.2l2.6-2.7 5.1 3.8c.5.4 1 .2 1.1-.4L22.3 5.3c.2-.7-.4-1.2-1.1-.9z"/>
          <path d="M9.2 13.3l8.4-6.2"/>
        </svg>
      </a>
      <a href="https://instagram.com/shavkatov.io" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="2" width="20" height="20" rx="5"/>
          <circle cx="12" cy="12" r="5"/>
          <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/>
        </svg>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 1.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-weight: 500;
    font-size: 1.1rem;
    color: #767676;
  }

  .nav-socials {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .nav-socials a {
    color: var(--color-secondary);
    transition: color 0.2s ease;
    display: flex;
  }

  .nav-socials a:hover {
    color: var(--color-text);
  }
</style>
