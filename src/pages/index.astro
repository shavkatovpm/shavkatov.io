---
import Header from '../components/Header.astro';
import '../styles/global.css';
---

<html lang="uz">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>Shavkatov Fayzulloh - Project Manager</title>
  <meta name="description" content="Shavkatov Fayzulloh - Personal blog about technology and development" />
  <meta name="theme-color" content="#000000" />
  <meta name="color-scheme" content="dark" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
</head>
<body class="hero-page">
  <canvas id="splashCanvas"></canvas>
  <Header />
  <section class="hero">
    <div class="hero-content container">
      <h1 class="hero-name" id="heroName">Shavkatov Fayzulloh</h1>
      <div class="hero-links" id="heroLinks">
        <a href="/about">About</a>
        <a href="/blog">Blog</a>
      </div>
    </div>
  </section>
</body>
</html>

<script>
  import { initSplashCursor } from '../scripts/splash-cursor.js';

  document.addEventListener('DOMContentLoaded', () => {
    const canvas = document.getElementById('splashCanvas') as HTMLCanvasElement;
    initSplashCursor(canvas);

    const heroName = document.getElementById('heroName');
    const heroLinks = document.getElementById('heroLinks');
    const headerEl = document.querySelector('header');

    // Ism: blur + fade in
    setTimeout(() => {
      heroName?.classList.add('visible');
    }, 600);

    // Links va header: ism animatsiyasi to'liq tugagach (600ms delay + 1s transition)
    setTimeout(() => {
      heroLinks?.classList.add('visible');
      headerEl?.classList.add('visible');
    }, 1600);
  });
</script>

<style>
  #splashCanvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 1;
  }

  .hero-page {
    height: 100dvh;
    margin: 0;
    overflow: hidden;
  }

  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    height: calc(100dvh - 60px);
    padding-bottom: 20dvh;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .hero-name {
    font-family: 'Caveat', cursive;
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 400;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    line-height: 1.1;
    white-space: nowrap;
    color: #999999;
    opacity: 0;
    filter: blur(10px);
    transition: opacity 1s ease-out, filter 1s ease-out;
  }

  .hero-name.visible {
    opacity: 1;
    filter: blur(0px);
  }

  .hero-links {
    display: flex;
    gap: 2rem;
    justify-content: center;
    opacity: 0;
    filter: blur(5px);
    transition: opacity 0.8s ease-out, filter 0.8s ease-out;
  }

  .hero-links.visible {
    opacity: 1;
    filter: blur(0px);
  }

  .hero-links a {
    color: #767676;
    font-size: 0.95rem;
    font-family: 'Poppins', sans-serif;
    transition: color 0.2s ease;
  }

  .hero-links a:hover {
    color: var(--color-text);
  }

  :global(header) {
    opacity: 0;
    filter: blur(5px);
    transition: opacity 0.8s ease-out, filter 0.8s ease-out;
  }

  :global(header.visible) {
    opacity: 1;
    filter: blur(0px);
  }
</style>
