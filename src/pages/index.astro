---
import { ViewTransitions, fade } from 'astro:transitions';
import Header from '../components/Header.astro';
import '../styles/global.css';
---

<html lang="uz">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/logo.png" />
  <title>Shavkatov Fayzulloh - Project Manager</title>
  <meta name="description" content="Shavkatov Fayzulloh - Personal blog about technology and development" />
  <meta name="author" content="Shavkatov Fayzulloh" />
  <link rel="canonical" href="https://shavkatov.io/" />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://shavkatov.io/" />
  <meta property="og:title" content="Shavkatov Fayzulloh - Project Manager" />
  <meta property="og:description" content="Shavkatov Fayzulloh - Personal blog about technology and development" />
  <meta property="og:image" content="https://shavkatov.io/logo.png" />
  <meta property="og:locale" content="uz_UZ" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content="Shavkatov Fayzulloh - Project Manager" />
  <meta name="twitter:description" content="Shavkatov Fayzulloh - Personal blog about technology and development" />
  <meta name="twitter:image" content="https://shavkatov.io/logo.png" />

  <meta name="theme-color" content="#000000" />
  <meta name="color-scheme" content="dark" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Shavkatov Fayzulloh",
      "additionalName": "Furqat o'g'li",
      "jobTitle": "Project Manager",
      "description": "Project Manager with 3+ years of experience in IT and Marketing. Founder of several IT projects based in Tashkent, Uzbekistan.",
      "url": "https://shavkatov.io",
      "image": "https://shavkatov.io/logo.png",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Tashkent",
        "addressCountry": "UZ"
      },
      "sameAs": [
        "https://t.me/shavkatovio",
        "https://instagram.com/shavkatov.io"
      ]
    }
  </script>
  <!-- Microsoft Clarity -->
  <script type="text/javascript">
    (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", "vf4tq5adhl");
  </script>
  <ViewTransitions />
</head>
<body class="hero-page">
  <canvas id="splashCanvas"></canvas>
  <Header />
  <section class="hero" transition:animate={fade({ duration: '0.4s' })}>
    <div class="hero-content container">
      <h1 class="hero-name" id="heroName">Shavkatov Fayzulloh</h1>
      <div class="hero-links" id="heroLinks">
        <a href="/about" id="aboutLink">Haqida</a>
        <a href="/blog">Blog</a>
      </div>
    </div>
  </section>
</body>
</html>

<script>
  import { initSplashCursor } from '../scripts/splash-cursor.js';

  let isFirstLoad = true;

  function setup() {
    // Faqat bosh sahifada ishlaydi
    const heroName = document.getElementById('heroName');
    if (!heroName) return;

    const canvas = document.getElementById('splashCanvas') as HTMLCanvasElement;
    if (canvas) initSplashCursor(canvas);

    const heroLinks = document.getElementById('heroLinks');
    const headerEl = document.querySelector('header');

    if (isFirstLoad) {
      // Saytga yangi kirilganda: animatsiya bilan
      isFirstLoad = false;

      // Darhol boshlanadi
      heroName.classList.add('visible');

      setTimeout(() => {
        heroLinks?.classList.add('visible');
        headerEl?.style.setProperty('opacity', '1');
        headerEl?.style.setProperty('filter', 'blur(0px)');
      }, 500);
    } else {
      // Ichki sahifadan qaytganda: hero elementlarini darhol ko'rsatish (transition o'chiriladi)
      heroName.style.cssText = 'opacity:1;filter:none;transition:none';
      heroLinks!.style.cssText = 'opacity:1;filter:none;transition:none';
      headerEl!.style.setProperty('opacity', '1');
      headerEl!.style.setProperty('filter', 'none');
      headerEl!.style.setProperty('transition', 'none');
    }

    // Til o'zgarganda About/Haqida almashadi
    const aboutLink = document.getElementById('aboutLink');
    const updateAboutText = (lang: string) => {
      if (aboutLink) aboutLink.textContent = lang === 'en' ? 'About' : 'Haqida';
    };
    updateAboutText(localStorage.getItem('lang') || 'uz');
    document.addEventListener('langchange', (e: any) => updateAboutText(e.detail));
  }

  // astro:page-load har safar ishlaydi â€” ham birinchi yuklashda, ham View Transition keyin
  document.addEventListener('astro:page-load', setup);
</script>

<style>
  #splashCanvas {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .hero-page {
    margin: 0;
    overflow: hidden;
    position: fixed;
    inset: 0;
  }

  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 60px;
    left: 0;
    right: 0;
    bottom: 0;
    padding-bottom: 10%;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .hero-name {
    font-family: 'Caveat', cursive;
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 400;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    line-height: 1.1;
    white-space: nowrap;
    color: #888888;
    opacity: 0;
    filter: blur(10px);
    transition: opacity 0.5s ease-out, filter 0.5s ease-out;
  }

  .hero-name.visible {
    opacity: 1;
    filter: blur(0px);
  }

  .hero-links {
    display: flex;
    gap: 2rem;
    justify-content: center;
    opacity: 0;
    filter: blur(5px);
    transition: opacity 0.5s ease-out, filter 0.5s ease-out;
  }

  .hero-links.visible {
    opacity: 1;
    filter: blur(0px);
  }

  .hero-links a {
    color: #888888;
    font-size: 0.95rem;
    font-family: 'Poppins', sans-serif;
    transition: color 0.2s ease;
  }

  .hero-links a:hover {
    color: var(--color-text);
  }

  :global(header) {
    opacity: 0;
    filter: blur(5px);
    transition: opacity 0.5s ease-out, filter 0.5s ease-out;
  }

</style>
