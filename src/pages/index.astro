---
import Header from '../components/Header.astro';
import '../styles/global.css';

const name = "Shavkatov Fayzulloh";
---

<html lang="uz">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>Shavkatov Fayzulloh - Project Manager</title>
  <meta name="description" content="Shavkatov Fayzulloh - Personal blog about technology and development" />
  <meta name="theme-color" content="#000000" />
  <meta name="color-scheme" content="dark" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
</head>
<body class="hero-page">
  <canvas id="splashCanvas"></canvas>
  <Header />
  <section class="hero">
    <div class="hero-content container">
      <h1 class="hero-name" id="heroName">
        {name.split('').map((char) => (
          char === ' '
            ? <span class="char-space">&nbsp;</span>
            : <span class="char">{char}</span>
        ))}
      </h1>
      <div class="hero-links" id="heroLinks">
        <a href="/about">About</a>
        <a href="/blog">Blog</a>
      </div>
    </div>
  </section>
</body>
</html>

<script>
  import { initSplashCursor } from '../scripts/splash-cursor.js';

  document.addEventListener('DOMContentLoaded', () => {
    const canvas = document.getElementById('splashCanvas') as HTMLCanvasElement;
    initSplashCursor(canvas);

    const chars = document.querySelectorAll('#heroName .char');
    const heroLinks = document.getElementById('heroLinks');
    const headerEl = document.querySelector('header');

    const charDuration = 75;
    chars.forEach((char, i) => {
      setTimeout(() => {
        (char as HTMLElement).style.opacity = '1';
        (char as HTMLElement).style.transform = 'translateY(0)';
      }, 600 + i * charDuration);
    });

    // Links va header animatsiyasi oxirgi harfdan keyin
    const totalDelay = 600 + chars.length * charDuration + 400;
    setTimeout(() => {
      heroLinks?.classList.add('visible');
      headerEl?.classList.add('visible');
    }, totalDelay);
  });
</script>

<style>
  #splashCanvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 1;
  }

  .hero-page {
    height: 100dvh;
    overflow: hidden;
    margin: 0;
  }

  .hero {
    height: calc(100dvh - 60px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 20vh;
  }

  .hero-content {
    text-align: center;
    width: 100%;
    position: relative;
    z-index: 2;
  }

  .hero-name {
    font-family: 'Caveat', cursive;
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 400;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    line-height: 1.3;
    white-space: nowrap;
    color: #999999;
  }

  .char {
    display: inline-block;
    opacity: 0;
    transform: translateY(-20px);
    transition: opacity 0.5s ease-out, transform 0.08s ease-out;
  }

  .char-space {
    display: inline-block;
    width: 0.3em;
  }

  .hero-links {
    display: flex;
    gap: 2rem;
    justify-content: center;
    opacity: 0;
    filter: blur(10px);
    transition: opacity 0.8s ease-out, filter 0.8s ease-out;
  }

  .hero-links.visible {
    opacity: 1;
    filter: blur(0px);
  }

  .hero-links a {
    color: #999999;
    font-family: 'Poppins', system-ui, sans-serif;
    font-size: 1rem;
    font-weight: 400;
    transition: color 0.2s ease;
  }

  .hero-links a:hover {
    color: var(--color-text);
  }

  :global(header) {
    opacity: 0;
    filter: blur(10px);
    transition: opacity 0.8s ease-out, filter 0.8s ease-out;
    position: relative;
    z-index: 2;
  }

  :global(header.visible) {
    opacity: 1;
    filter: blur(0px);
  }
</style>
