---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id.replace(/\.md$/, '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout
  title={`${post.data.title} - Shavkatov`}
  description={post.data.description}
  article={true}
>
  <article class="blog-post" transition:animate="fade">
    <header>
      <h1 id="postTitle" data-uz={post.data.title} data-en={post.data.title_en || post.data.title}>{post.data.title}</h1>
      {(post.data.description || post.data.description_en) && (
        <h4 class="description" id="postDesc" data-uz={post.data.description} data-en={post.data.description_en || post.data.description}>{post.data.description}</h4>
      )}
    </header>

    <div class="content">
      <Content />
    </div>

    <footer>
      <a href="/blog" id="backLink">&larr; Ortga</a>
    </footer>
  </article>
</BaseLayout>

<script>
  const backLink = document.getElementById('backLink');
  const postTitle = document.getElementById('postTitle');
  const postDesc = document.getElementById('postDesc');
  const contentUz = document.querySelector('.content-uz') as HTMLElement;
  const contentEn = document.querySelector('.content-en') as HTMLElement;

  const setLang = (lang: string) => {
    if (backLink) backLink.innerHTML = lang === 'en' ? '&larr; Back' : '&larr; Ortga';
    if (postTitle) postTitle.textContent = lang === 'en' ? postTitle.dataset.en! : postTitle.dataset.uz!;
    if (postDesc) postDesc.textContent = lang === 'en' ? postDesc.dataset.en! : postDesc.dataset.uz!;
    if (contentUz) contentUz.style.display = lang === 'en' ? 'none' : 'block';
    if (contentEn) contentEn.style.display = lang === 'en' ? 'block' : 'none';
  };
  setLang(localStorage.getItem('lang') || 'uz');
  document.addEventListener('langchange', (e: any) => setLang(e.detail));
</script>

<style>
  .blog-post {
    padding: 1rem 0;
  }

  header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(136, 136, 136, 0.5);
  }

  header h1 {
    margin: 0;
    color: #888888;
  }

  .description {
    color: var(--color-secondary);
    font-size: 1.1rem;
    margin: 0.75rem 0 0;
  }

  .content {
    line-height: 1.8;
    color: #888888;
  }

  .content :global(h2) {
    margin-top: 2rem;
  }

  .content :global(h3) {
    margin-top: 1.5rem;
  }

  .content :global(a) {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .content :global(img) {
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  footer a {
    color: var(--color-secondary);
  }

  footer a:hover {
    color: var(--color-text);
  }
</style>
