---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout
  title="Blog - Shavkatov"
  description="Texnologiya, dasturlash va shaxsiy tajribalar haqida maqolalar"
>
  <section class="blog-page">
    <h1>Blog</h1>
    <p class="blog-intro">
      Texnologiya, dasturlash va shaxsiy tajribalar haqida maqolalar.
    </p>

    {posts.length > 0 ? (
      <ul class="posts-list">
        {posts.map((post) => (
          <li>
            <a href={`/blog/${post.id.replace(/\.md$/, '')}`}>
              <div class="post-content">
                <h2 class="post-title">{post.data.title}</h2>
                {post.data.description && (
                  <p class="post-description">{post.data.description}</p>
                )}
              </div>
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('uz-UZ', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p class="no-posts">Hozircha maqolalar yo'q. Tez orada yangi maqolalar qo'shiladi.</p>
    )}
  </section>
</BaseLayout>

<style>
  .blog-page {
    padding: 2rem 0;
  }

  .blog-intro {
    color: var(--color-secondary);
    margin-bottom: 2rem;
  }

  .posts-list {
    list-style: none;
    padding: 0;
  }

  .posts-list li {
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .posts-list li:last-child {
    border-bottom: none;
  }

  .posts-list a {
    display: block;
    padding: 1.5rem 0;
  }

  .post-content {
    margin-bottom: 0.5rem;
  }

  .post-title {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .post-description {
    color: var(--color-secondary);
    font-size: 0.95rem;
    margin: 0;
  }

  time {
    color: var(--color-secondary);
    font-size: 0.9rem;
  }

  .no-posts {
    color: var(--color-secondary);
  }
</style>
